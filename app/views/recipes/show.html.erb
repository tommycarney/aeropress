<p id="notice"><%= notice %></p>

<h2>
 <a href="https://www.youtube.com/watch?v=<%= @recipe.youtube_id %>"> <%= @recipe.title %></a>
</h2>

 <div class="video">
   <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @recipe.youtube_id %>" frameborder="0" allowfullscreen></iframe>
 </div>

<p>
  <%= @recipe.description %>
</p>

<% if user_signed_in? %>
  <%= link_to 'Edit this Recipe', edit_recipe_path(@recipe), id: "edit_#{@recipe.id}" %> |
  <%= link_to 'Back', recipes_path %> |
  <%= link_to "Delete this Recipe", recipe_path(@recipe), method: :delete, data: {confirm: "Are you sure you want to delete this recipe?"}, id: "delete_recipe_#{@recipe.id}" %>
<% end %>
