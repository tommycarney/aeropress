<p id="notice"><%= notice %></p>

<h2>
 <a href="https://www.youtube.com/watch?v=<%= @recipe.youtube_id %>"> <%= @recipe.title %></a>
</h2>

 <div class="video">
   <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @recipe.youtube_id %>" frameborder="0" allowfullscreen></iframe>
 </div>

<p>
  <%= @recipe.description %>
</p>
<%= link_to 'Back', root_path %>
<% if user_signed_in? %>
  <%= partial 'modify_recipe', recipe: @recipe %>
<% end %>
